{
  "name": "postflight",
  "version": "1.0.0",
  "description": "Database to Javascript object mapper",
  "repository": {
    "type": "git",
    "url": "git://github.com/marcusfoertsch/postflight.git"
  },
  "main": "dist/postflight.js",
  "files": [
    "dist/**",
    "LICENSE",
    "readme.md"
  ],
  "scripts": {
    "test": "mocha --require @babel/register \"test/**/*.test.js\"",
    "test-unit": "mocha --require @babel/register \"test/unit/**/*.test.js\"",
    "test-integration": "mocha --require @babel/register \"test/integration/**/*.test.js\"",
    "coverage": "nyc --reporter=text --reporter=lcov mocha --require @babel/register \"test/**/*.test.js\"",
    "lint": "./node_modules/.bin/eslint ./",
    "prepare": "mkdir -p dist && babel src -d dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./node_modules/.bin/eslint ./"
    }
  },
  "keywords": [
    "node",
    "postgres",
    "sql"
  ],
  "author": "Marcus Foertsch",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "chai": "^4.2.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.9",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "proxyquire": "^2.1.3"
  }
}
